    {"nombre": "Pitón", "derrotado_por": "Apolo"},
    {"nombre": "Cierva de Cerinea", "derrotado_por": None},
    {"nombre": "Basilisco", "derrotado_por": None},
    {"nombre": "Jabalí de Erimanto", "derrotado_por": None}
]

class BinaryTree():
    class Node():
        def __init__(self, nombre, derrotada_por):
            self.nombre = nombre
            self.derrotada_por = derrotada_por
            self.descripcion = None
            self.capturada = None
            self.left = None
            self.right = None
            


    def __init__(self):
        self.root = None

    def insert(self, nombre, derrotado_por):
        def __insert(node, nombre, derrotado_por):
            if node is None:
                return BinaryTree.Node(nombre, derrotado_por)
            elif nombre < node.nombre:
                node.left = __insert(node.left, nombre, derrotado_por)
            else:
                node.right = __insert(node.right, nombre, derrotado_por)
            return node
        self.root = __insert(self.root, nombre, derrotado_por)

    #A
    def in_order(self):
        def __in_order(node):
            if node is not None:
                __in_order(node.left)
                print(f"Nombre: {node.nombre}, Derrotada por: {node.derrotada_por}")
                __in_order(node.right)
        __in_order(self.root)

    #B
    def cargar_descripcion(self, nombre, descripcion):
        def __cargar_descripcion(node, nombre, descripcion):
            if node is not None:
                if node.nombre == nombre:
                    node.descripcion = descripcion
                elif nombre < node.nombre:
                    __cargar_descripcion(node.left, nombre, descripcion)
                else:
                    __cargar_descripcion(node.right, nombre, descripcion)
        if self.root is not None:
            __cargar_descripcion(self.root, nombre, descripcion)
    
     # C
    def mostrar_informacion(self, nombre):
        def __mostrar_informacion(node, nombre):
            if node is not None:
                if node.nombre == nombre:
                    print(f"Nombre: {node.nombre}")
                    print(f"Derrotada por: {node.derrotada_por}")
                    print(f"Descripción: {node.descripcion}")
                elif nombre < node.nombre:
                    __mostrar_informacion(node.left, nombre)
                else:
                    __mostrar_informacion(node.right, nombre)
        if self.root is not None:
            __mostrar_informacion(self.root, nombre)

    #D
    def contar_derrotadores(self):
        conteo = {}

        def __recorrer(node):
            if node is not None:
                if node.derrotada_por is not None:
                    nombre = node.derrotada_por
                    if nombre in conteo:
                        conteo[nombre] += 1
                    else:
                        conteo[nombre] = 1
                __recorrer(node.left)
                __recorrer(node.right)

        __recorrer(self.root)
        return conteo
    #E
    def listar_derrotadas_por_heracles(self):
        derrotadas = []
        def __recorrer(node):
            if node is not None:
                if node.derrotada_por == "Heracles":
                    derrotadas.append(node.nombre)
                __recorrer(node.left)
                __recorrer(node.right)
        __recorrer(self.root)
        return derrotadas
    
    #F 
    def listar_no_derrotadas(self):
        no_derrotadas = []
        def __recorrer(node):
            if node is not None:
                if node.derrotada_por is None:
                    no_derrotadas.append(node.nombre)
                __recorrer(node.left)
                __recorrer(node.right)
        __recorrer(self.root)
        return no_derrotadas
    
    #G y H
    def asignar_captura(self, nombre, heroe):
        def __asignar(node, nombre, heroe):
            if node is not None:
                if node.nombre == nombre:
                    node.capturada = heroe
                elif nombre < node.nombre:
                    __asignar(node.left, nombre, heroe)
                else:
                    __asignar(node.right, nombre, heroe)
        if self.root is not None:
            __asignar(self.root, nombre, heroe)

    #I
    def proximity_search(self, nombre):
        def __search(node, nombre):
            if node is not None:
                if node.nombre.startswith(nombre):
                    print(node.nombre)
                __search(node.left, nombre)
                __search(node.right, nombre)
        if self.root is not None:
            __search(self.root, nombre)

    
    def eliminar_criatura(self, nombre):
    
        def __delete(node, nombre):
            
            # Si el nodo es None, significa que no encontramos la criatura
            # o llegamos al final del subárbol
            if node is None:
                return None

            # buscada izquierda
            if nombre < node.nombre:
                node.left = __delete(node.left, nombre)

            # buscada derecha
            elif nombre > node.nombre:
                node.right = __delete(node.right, nombre)

            # Si el nombre coincide, encontramos el nodo a eliminar
            else:

                # ----- CASO 1 y 2 -----

                # Si no tiene hijo izquierdo,
                # lo reemplazamos por su hijo derecho 
                if node.left is None:
                    return node.right  

                # Si no tiene hijo derecho,
                # lo reemplazamos por su hijo izquierdo
                elif node.right is None:
                    return node.left  

                # ----- CASO 3: nodo con 2 hijos -----

                # Buscamos el sucesor
                succ = node.right
                while succ.left is not None:
                    succ = succ.left

                # Copiamos los datos del sucesor al nodo actual
                # (esto mantiene el orden del árbol)
                node.nombre = succ.nombre
                node.derrotada_por = succ.derrotada_por
                node.descripcion = succ.descripcion
                node.capturada = succ.capturada

                # Eliminamos el sucesor original del subárbol derecho
                # porque ahora quedó duplicado
                node.right = __delete(node.right, succ.nombre)

            # Retornamos el nodo actualizado
            return node

        # Si el árbol no está vacío, comenzamos desde la raíz
        if self.root is not None:
            self.root = __delete(self.root, nombre)

    #K
    def modificar_aves_estinfalo(self):
        def __buscar(node):
            if node is not None:
                if node.nombre == "Aves del Estínfalo":
                    node.derrotada_por = "Heracles (derrotó a varias)"
                elif "Aves del Estínfalo" < node.nombre:
                    __buscar(node.left)
                else:
                    __buscar(node.right)

        __buscar(self.root)

    #L
    def modificar_ladon(self):
        def __buscar(node):
            if node is not None:
                if node.nombre == "Ladón":
                    node.nombre = "Dragón Ladón"
                elif "Ladón" < node.nombre:
                    __buscar(node.left)
                else:
                    __buscar(node.right)

        __buscar(self.root)

    #M
    def by_level(self):  
        tree_queue = Queue()
        if self.root is not None:
            tree_queue.put(self.root)  # put() en vez de arrive, es mas comodo usar directamente la de python

            while tree_queue.qsize() > 0:  # qsize() en vez de size
                node = tree_queue.get()    # get() en vez de attention
                print(node.nombre)
                if node.left is not None:
                    tree_queue.put(node.left)
                if node.right is not None:
                    tree_queue.put(node.right)

    #N
    def listar_capturadas_por_heracles(self):
        capturadas = []
        def __recorrer(node):
            if node is not None:
                if node.capturada == "Heracles":
                    capturadas.append(node.nombre)
                __recorrer(node.left)
                __recorrer(node.right)
        __recorrer(self.root)
        return capturadas


arbolCriaturas = BinaryTree()

for c in criaturas:
    arbolCriaturas.insert(c["nombre"], c["derrotado_por"])


#A
print("Listado inorden de las criaturas y quienes la derrotaron:")
arbolCriaturas.in_order()

