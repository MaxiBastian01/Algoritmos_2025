lista = []
for nombre, cantidad in conteo_derrotadores.items():
    lista.append((cantidad, nombre))
lista.sort(reverse=True) #Ordena de mayor a menor el reverse true
for cantidad, nombre in lista[:3]:
    print(nombre, cantidad)

#E
